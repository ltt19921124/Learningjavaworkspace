package day04;

public class ForForTest2 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		/*打印出如下图形：
		* * * * *
		 * * * *
		  * * *
		   * *
		   	*
		 */
		
		for (int x = 0;x < 5;x++){
			for (int y = 0;y < x;y++){
				System.out.print(" ");
			}
			for (int y = 0;y < 5 - x;y++){
				System.out.print("* ");
			}
			System.out.println();
		}
		
	}

}
