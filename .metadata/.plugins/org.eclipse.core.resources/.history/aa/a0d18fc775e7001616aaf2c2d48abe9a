
class Person{
	private String name;
	private int age;
	Person(){
		name = "baby";
		age = 1;
		System.out.println("person run");
	}
	Person(String name){
		this.name = name;
	}
	
	Person(String name,int age){
		this(name);//this语句只能在第一行。
		age = age;
	}
	public void speak(){
		System.out.println(this.name+":" + this.age);
	}
}

public class ThisDemo {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Person p = new Person();
	}

}
