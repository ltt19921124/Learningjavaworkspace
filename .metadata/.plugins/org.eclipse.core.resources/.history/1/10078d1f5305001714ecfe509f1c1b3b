package Ïß³Ì;

public class Print {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int z = 5;
		for (int i = 0; i < 4; i++) {
//			int k = i;
			for (int j = 0; j < 3 - i; j++) {
				System.out.print(" ");
			}
			for (int j = 0; j < i + 1; j++) {
				System.out.print("* ");
			}
			System.out.println("");
		}
	}

}
