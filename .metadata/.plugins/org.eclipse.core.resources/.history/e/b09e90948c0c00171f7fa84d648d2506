package duoxiancheng;
/*
 * 创建线程方式一：
 * 继承Thread类
 * 
 * */
class Demo extends Thread{
	private String name;
	Demo(String name){
		this.name = name;
	}
	public void run(){
		for (int i = 0; i < 10; i++) {
			System.out.println(name + "...i=" + i);
		}
	}
}

public class ThreadDemo2 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Demo d1 = new Demo("旺财");
		Demo d2 = new Demo("xiaoqiang");
		d1.show();
		d2.show();
		
	}

}
