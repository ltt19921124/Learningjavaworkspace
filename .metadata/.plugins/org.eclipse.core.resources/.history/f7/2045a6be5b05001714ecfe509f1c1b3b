package Ïß³Ì;

public class Sort1 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int a[]={1,54,67,89,90,58,37};  
	    double d1=a.length;  
	    int temp=0;  
	  
	    while(true){  
	       d1= Math.ceil(d1/2);  
	       int d=(int) d1;  
	       for(int x=0;x<d;x++){  
	  
	           for(int i=x+d;i<a.length;i+=d){  
	              int j=i-d;  
	              temp=a[i];  
	              for(;j>=0&&temp<a[j];j-=d){  
	                   a[j+d]=a[j];  
	              }  
	              a[j+d]=temp;  
	           }  
	       }  
	  
	       if(d==1){  
	           break;  
	       }  
	  
	    for(int i=0;i<a.length;i++){  
	       System.out.println(a[i]);  
	    }  
	}

	}
}
