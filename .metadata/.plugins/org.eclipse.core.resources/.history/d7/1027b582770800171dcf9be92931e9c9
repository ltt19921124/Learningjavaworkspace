package day05;

public class Test {

	public static void main(String[] args){
		int[] arr = {4,7,8,20};
//		System.out.println("ok");
		int index = halfSort(arr, 8);
		System.out.println(index);
	}
	public static int halfSort(int[] arr,int key){
		int min = 0;
		int max = arr.length - 1;
		int mid = (min + max)/2;
		while(key != arr[mid]){
			if (key > arr[mid]){
				min = mid + 1;
			}else if(key < arr[mid]){
				max = mid - 1;
			}
			if (min > max){
				return -min-1;
			}
		}
		return mid;
	}
} 
