package day05;

public class ArrayDemo5 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int[] arr = {4,18,73,89,98};
		int index = halfSearch_2(arr,90);
		System.out.println(index);
	}
	
	
	private static int halfSearch_2(int[] arr, int key) {
		int max,min,mid;
		min = 0;
		max = arr.length - 1;
		while(min <= max){
			mid = (min + max) >> 1;
			if(key > arr[mid]){
				min = mid + 1;
			}else if(key < arr[mid]){
				max = mid - 1;
			}else
				return mid;
		}
		return -min - 1;
	}

}
